<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorWhite"
    tools:context="com.example.app.MainActivity">

    <Button
        android:text="Yellow Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_yellow"
        android:layout_toLeftOf="@+id/button_blue"
        android:layout_alignLeft="@+id/button_red"
        android:layout_alignStart="@+id/button_red"
        android:layout_alignTop="@+id/button_blue"
        android:layout_above="@+id/button_green" />

    <Button
        android:text="Green Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_green"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true" />

    <Button
        android:text="Blue Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_blue"
        android:layout_above="@+id/button_green"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Red Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_red"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_today"
        android:text="10/15"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="displayEvents"/>

    <Button
        android:text="10/16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_tomorrow"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/button_today"
        android:layout_toEndOf="@+id/button_today" />

    <Button
        android:text="10/17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_day_after_tomorrow"
        android:layout_alignBaseline="@+id/button_tomorrow"
        android:layout_alignBottom="@+id/button_tomorrow"
        android:layout_toRightOf="@+id/button_tomorrow"
        android:layout_toEndOf="@+id/button_tomorrow" />

    <Button
        android:text="10/18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button_day_after_tomorrow"
        android:layout_toRightOf="@+id/button_day_after_tomorrow"
        android:layout_toEndOf="@+id/button_day_after_tomorrow"
        android:id="@+id/button_3_days_later" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/button_today"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp"
        android:id="@+id/events_list_today" />
</RelativeLayout>
